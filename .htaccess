RewriteEngine On
RewriteBase /

# 1. Wymuszenie HTTPS (opcjonalne, ale zalecane)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Przekierowania starych podstron (wielkie litery -> małe, brak .html -> .html)
# Flaga [NC] ignoruje wielkość liter (Regulamin = regulamin)
RewriteRule ^Regulamin/?$ /regulamin.html [NC,L,R=301]
RewriteRule ^Kontakt/?$ /kontakt.html [NC,L,R=301]
RewriteRule ^Galeria/?$ /galeria.html [NC,L,R=301]
RewriteRule ^Polityka-prywatnosci/?$ /polityka-prywatnosci.html [NC,L,R=301]

# 3. Normalizacja adresów (usunięcie końcowego ukośnika dla plików .html)
RewriteRule ^(.*)\.html/$ /$1.html [L,R=301]

# 4. Przekierowanie "katalogów" na pliki .html dla wersji językowych
# (np. /de/kontakt/ -> /de/kontakt.html)

# Niemiecki (DE)
RewriteRule ^de/kontakt/?$ /de/kontakt.html [NC,L,R=301]
RewriteRule ^de/galeria/?$ /de/galeria.html [NC,L,R=301]
RewriteRule ^de/regulamin/?$ /de/regulamin.html [NC,L,R=301]
RewriteRule ^de/polityka-prywatnosci/?$ /de/polityka-prywatnosci.html [NC,L,R=301]

# Angielski (EN)
RewriteRule ^en/kontakt/?$ /en/kontakt.html [NC,L,R=301]
RewriteRule ^en/galeria/?$ /en/galeria.html [NC,L,R=301]
RewriteRule ^en/regulamin/?$ /en/regulamin.html [NC,L,R=301]
RewriteRule ^en/polityka-prywatnosci/?$ /en/polityka-prywatnosci.html [NC,L,R=301]
